network:
  ethernets:
    enp1s0:
      dhcp4: no
      dhcp6: no
    enp2s0:
      dhcp4: no
      dhcp6: no
    enp3s0:
      dhcp4: no
      dhcp6: no
    enp4s0:
      dhcp4: no
      dhcp6: no
    enp5s0:
      dhcp4: no
      dhcp6: no
    enp6s0:
      dhcp4: no
      dhcp6: no
  bridges:
    br0:
      dhcp4: no
      dhcp6: no
      interfaces: [enp1s0]
      addresses: [{{ host_vars.network.outer_bridge_interface.ip }}]
      gateway4: {{ host_vars.network.outer_bridge_interface.gateway4 }}
      mtu: {{ host_vars.network.outer_bridge_interface.mtu }}
      nameservers:
        addresses: [{% set g = namespace(comma = '') %}{% for item in host_vars.network.outer_bridge_interface.nameservers.addresses %}{{ g.comma }}{{ item }}{% set g.comma = ', ' %}{% endfor %}]
    br1:
      dhcp4: no
      dhcp6: no
      interfaces: [enp2s0, enp3s0, enp4s0, enp5s0, enp6s0]
      addresses: [{{ host_vars.network.inner_interface.ip }}]
      mtu: {{ host_vars.network.inner_interface.mtu }}
  version: 2
