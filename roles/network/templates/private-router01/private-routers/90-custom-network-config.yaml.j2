network:
  ethernets:
    enp1s0:
      dhcp4: no
      dhcp6: no
    enp2s0:
      dhcp4: no
      dhcp6: no
    enp3s0:
      dhcp4: no
      dhcp6: no
    enp4s0:
      dhcp4: no
      dhcp6: no
    enp5s0:
      dhcp4: no
      dhcp6: no
    enp6s0:
      dhcp4: no
      dhcp6: no
  bridges:
    {{ host_vars.network.provider.bridge[0].name }}:
      dhcp4: no
      dhcp6: no
      interfaces: [enp1s0]
      addresses: [{{ host_vars.network.provider.bridge[0].ip }}]
      gateway4: {{ host_vars.network.provider.bridge[0].gateway4 }}
      mtu: {{ host_vars.network.provider.bridge[0].mtu }}
      nameservers:
        addresses: [{% set g = namespace(comma = '') %}{% for item in host_vars.network.provider.bridge[0].nameservers.addresses %}{{ g.comma }}{{ item }}{% set g.comma = ', ' %}{% endfor %}]
    {{ host_vars.network.management.bridge[0].name }}:
      dhcp4: no
      dhcp6: no
      interfaces: [enp2s0, enp3s0, enp4s0, enp5s0, enp6s0]
      addresses: [{{ host_vars.network.management.bridge[0].ip }}]
      mtu: {{ host_vars.network.management.bridge[0].mtu }}
  version: 2
