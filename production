# An inventry file for development
[controllers]
dev-controller01

[computes]
dev-compute01
dev-compute02

[cinders]
dev-cinder01
dev-cinder02

[swifts]
dev-swift01
dev-swift02

# A role storage contains any other storage roles like cinder and swift.
[storages]
dev-storage01
dev-storage02

[default:children]
controllers
computes
cinders
storages

[all:children]
default

[all:vars]
ansible_user=ubuntu
